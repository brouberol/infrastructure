# Datadog
datadog_agent6: true
datadog_config:
  log_level: INFO
  tags: "name:{{ hostname }}, role:web"
datadog_checks:
  process:
    init_config:
    instances:
      - name: ssh
        search_string: ['ssh', 'sshd']
      - name: nginx
        search_string: ['nginx']
      - name: lounge
        search_string: ['/usr/local/bin/lounge start']
        exact_match: false
      - name: fathom
        search_string: ['fathom']
      - name: radicale
        search_string: ['python3 -m radicale']
        exact_match: false
  nginx:
    init_config:
    instances:
     - nginx_status_url: "https://{{ page_domain }}/basic_status"
